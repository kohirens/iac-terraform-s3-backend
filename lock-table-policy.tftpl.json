{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Principal": {
                "AWS": "${account_id}"
            },
            "Effect": "Allow",
            "Action": [
                "dynamodb:DescribeTable",
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:DeleteItem"
            ],
            "Resource": "${table_arn}"
        }
    ]
}
